<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>You'll have access to our community and their contact information.</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>For the low cost of free, a basic account will give you access to our community!</p>
    <% end %>
  </div>

  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
    <div class="well">
      <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render 'pro_form' %>
        <% else %>
          <%= render 'basic_form' %>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
